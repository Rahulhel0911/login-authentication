  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div>
    <nav class="nav_div">
      <h3>Welcome,<span style="color: darkgoldenrod; font-size: 30px;">you</span></h3>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/login">Profile</a></li>
        <li><a href="/register">Register</a></li>
      </ul>
    </nav>
  </div>
<center>
  <div>
   <span style="font-weight: bold; font-size: 27px;"> Register Here</span>
</div></center>
  <div class="card" >
    <center>
        <form action="/auth/register" method="post">
   <div class="mb-3 row">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input type="text" placeholder="enter your name" id="name" >
        </div>
        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input type="text"placeholder="enter your mail" id="email">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input type="password" placeholder="enter your password" id="Password">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label">confirm Password</label>
        <div class="col-sm-10">
          <input type="password" placeholder="confirm your password" id="Passwordconfirm">
        </div>
      </div>
      <button type="button" class="btn">Register</button>
    
      
    <div class="card-body">
    </form>
    
    </center>
    
    </div>
    <!-- {{#if message}} 
    <h3 class="alert alert-danger mt-4">{{message}}</h3>
{{/if}} -->
    
  </div>
 
   
    
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
